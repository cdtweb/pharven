<?xml version="1.0"?>
<ruleset name="Phaven coding standard">
    <description>Pharven coding standard</description>

    <!-- command arguments -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- include paths -->
    <file>src</file>
    <file>tests</file>
    <file>bin</file>
</ruleset>